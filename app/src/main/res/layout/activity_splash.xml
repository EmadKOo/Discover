<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.SplashActivity.SplashActivity">


    <TextView
        android:id="@+id/discoverTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D I S C O V E R"
        android:textColor="@color/light_text"
        android:layout_centerInParent="true"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/updatesDiscoverTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update you with latest news"
        android:layout_below="@id/discoverTV"
        android:layout_centerHorizontal="true"
        android:textColor="@color/light_text"
        android:textSize="16sp"
        />
</RelativeLayout>